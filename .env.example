# ============================================
# REQUIRED: Ollama API Configuration
# ============================================
# Ollama runs locally - no API key needed!
# Default: http://localhost:11434
OLLAMA_API_URL=http://localhost:11434

# Model to use: llava (for image understanding)
# Other options: mistral, neural-chat, etc.
OLLAMA_MODEL=llava

# ============================================
# Solana Network Configuration
# ============================================
# Options: devnet | mainnet-beta
# Use 'devnet' for testing with free SOL
# Use 'mainnet-beta' for production with real SOL
SOLANA_NETWORK=devnet

# ============================================
# OPTIONAL: Wallet Security
# ============================================
# Set a password to encrypt wallet backup
# Leave empty to skip encryption
WALLET_PASSWORD=

# ============================================
# OPTIONAL: Bot Configuration
# ============================================
# Polling interval in milliseconds (default: 60000 = 1 minute)
POLLING_INTERVAL=60000

# Minimum score threshold for winning (0-100, default: 70)
MIN_WIN_THRESHOLD=70

# ============================================
# OPTIONAL: POIDH Indexer (real POIDH bounty/claim ingestion)
# ============================================
# Set these to enable fetching real bounties/claims via the POIDH Indexer REST API.
POIDH_INDEXER_BASE_URL=
POIDH_CHAIN_ID=
POIDH_BOUNTY_ID=

# ============================================
# OPTIONAL: Hybrid POIDH execution mode
# ============================================
# indexer (default): read bounties/claims via POIDH Indexer REST API
# evm: interact directly with POIDH EVM contracts (Base/Arbitrum/Degen)
POIDH_MODE=indexer

# ============================================
# OPTIONAL: EVM / POIDH Contracts (only if POIDH_MODE=evm)
# ============================================
EVM_NETWORK=base-sepolia
EVM_RPC_URL=
EVM_PRIVATE_KEY=
POIDH_EVM_CONTRACT_ADDRESS=

# ============================================
# OPTIONAL: IPFS (Pinata)
# ============================================
PINATA_API_KEY=
PINATA_SECRET_KEY=

# ============================================
# OPTIONAL: Logging
# ============================================
# Log level: DEBUG | INFO | WARN | ERROR
LOG_LEVEL=INFO
